{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react",
    "strict": true,
    "noEmit": true,
    "allowJs": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["react-native"]
  },
  "include": ["**/*.ts", "**/*.tsx", "index.js"],
  "exclude": ["node_modules", "android", "ios"]
}
